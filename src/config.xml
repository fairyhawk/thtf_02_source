  <max_post_size>5120000</max_post_size>
  
  <!--上传文件过大导致失败的错误提示-->
  <max_post_size_err_msg>文件不能大于5M</max_post_size_err_msg>
  
  <!--每页显示的记录条数-->
  <default_page_size>10</default_page_size>
